<!DOCTYPE html>
<html>

<% include partials/head %>

<body class="body-cadastro">
	
	<nav class="navbar navbar-inverse navbar-static-top">
		<div class="container-fluid">
			<form action="/" class="navbar-form pull-right">
				<button type="submit" class="btn btn-success">Voltar</button>				
			</form>
		</div>
	</nav>
	
	<% if(validacao.length > 0){ %>
		<div class="erros-login">
			<h1>Atenção!</h1>
			<ul>
				<% validacao.forEach(function(erro){ %>
					<li><%= erro.msg %></li>
				<% }); %>
			</ul>
		</div>
	<% } %>

	<% if(usuario.length > 0){ %>
		<div class="erros-login">
			<h1>Atenção!</h1>
			<p><%= usuario %></p>
		</div>
	<% } %>

	<div class="container">
		<section class="page-header">
 			<h1>Cadastro de Jogador</h1>
		</section>		


		<form action="/cadastrar" method="POST" class="form-cadastro">
			<div class="row">
				<div class="col-lg-12 cadastro">
					<input type="text" class="form-control" id="usu_nome" name="usu_nome" placeholder="Nome" value="<%= dados.usu_nome %>">
				</div>

				<div class="col-lg-12 cadastro">
					<input type="text" class="form-control" id="usu_usuario" name="usu_usuario" placeholder="Usuário" value="<%= dados.usu_usuario %>" required>
				</div>

				<div class="col-lg-12 cadastro">	
					<input type="password" class="form-control" id="usu_senha" name="usu_senha" placeholder="Senha" value="<%= dados.usu_senha %>" required>
				</div>
			</div>

			<div class="row">
				<div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 casa">
					<img src="images/casas/stark.png" alt=""><br>
					<input type="radio" id="usu_casa" name="usu_casa" value="stark">Stark
				</div>

				<div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 casa">
					<img src="images/casas/lannister.png" alt=""><br>
					<input type="radio" id="usu_casa" name="usu_casa" value="lannister">Lannister
				</div>

				<div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 casa">
					<img src="images/casas/baratheon.png" alt=""><br>
					<input type="radio" id="usu_casa" name="usu_casa" value="baratheon">Baratheon
				</div>

				<div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 casa">
					<img src="images/casas/targaryen.png" alt=""><br>
					<input type="radio" id="usu_casa" name="usu_casa" value="targaryen">Targaryen
				</div>

				<div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 casa">
					<img src="images/casas/greyjoy.png" alt=""><br>
					<input type="radio" id="usu_casa" name="usu_casa" value="greyjoy">Greyjoy
				</div>

				<div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 casa">
					<img src="images/casas/tully.png" alt=""><br>
					<input type="radio" id="usu_casa" name="usu_casa" value="tully">Tully
				</div>
			
				<div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 casa">
					<img src="images/casas/martell.png" alt=""><br>
					<input type="radio" id="usu_casa" name="usu_casa" value="martell">Martell
				</div>

				<div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 casa">
					<img src="images/casas/tyrell.png" alt=""><br>
					<input type="radio" id="usu_casa" name="usu_casa" value="tyrell">Tyrell
				</div>
			</div>
			
			<div class="row col-lg-12 btn-cadastro">
				<button type="submit" class="center-block btn btn-primary">Cadastrar</button>
			</div>
		</form>
	</div>

</body>
</html>